---
import Header from "../components/Header/Header.astro";

type Props = {
  title?: string;
};

const { title = "transversais" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body>
    <div class="content_wrapper">
      <Header />
      <slot />
    </div>
  </body>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

    html,
    body {
      font-family: "Fira Sans", sans-serif;
      @apply bg-gradient-to-tr from-zinc-100 to-zinc-300 text-neutral-700;
      @apply w-full h-full;
    }

    .content_wrapper {
      @apply grid grid-cols-12 w-full h-full;
    }

    ::-webkit-scrollbar {
      @apply w-1.5;
    }

    /* Define the background color of the track */
    ::-webkit-scrollbar-track {
      @apply bg-zinc-950;
    }

    /* Define the color and style of the thumb */
    ::-webkit-scrollbar-thumb {
      @apply bg-violet-800;
    }
  </style>
</html>
