---
import Header from "../components/Header/Header.astro";

type Props = {
  title?: string;
};

const { title = "transversais" } = Astro.props;
---

<!DOCTYPE html>
<html lang="pt-br">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg" href="/favicon.svg" />

    <title>{title}</title>
  </head>
  <body>
    <div class="content_wrapper">
      <Header />
      <slot />
    </div>
  </body>

  <style is:global>
    @import url("https://fonts.googleapis.com/css2?family=Fira+Sans:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&display=swap");

    html,
    body {
      font-family: "Fira Sans", sans-serif;
      @apply bg-gradient-to-r from-white to-ecru;
      @apply w-full h-full;
      @apply text-gray-700;
    }

    .content_wrapper {
      @apply grid grid-cols-12 w-full h-full place-content-start max-w-5xl mx-auto;
    }

    ::-webkit-scrollbar {
      @apply w-2;
    }

    /* Define the background color of the track */
    ::-webkit-scrollbar-track {
      @apply bg-gray-300;
    }

    /* Define the color and style of the thumb */
    ::-webkit-scrollbar-thumb {
      @apply bg-zinc-950;
    }
  </style>
</html>
