---
import Layout from "../layout/Layout.astro";
import { summary } from "../utils/summary";
---

<Layout>
  <main>
    <h2>Sum√°rio</h2>
    {
      summary.map(({ chapter, poems }) => {
        return (
          <>
            <h3>{chapter}</h3>
            <ul>
              {poems.map(({ title }) => {
                return <li>{title}</li>;
              })}
            </ul>
          </>
        );
      })
    }
  </main>
</Layout>

<style>
  main {
    @apply container mx-auto pt-5;
  }
  main h2 {
    font-family: ATW-Light;
    @apply p-2 text-3xl sm:text-5xl font-semibold mb-2 sm:mb-5;
  }

  main h3 {
    @apply p-2 pl-4 sm:pl-16 text-xl sm:text-4xl mb-2 sm:mb-5;
  }

  main ul {
    @apply p-2 pl-16 sm:pl-24 text-lg sm:text-xl mb-5;
  }
</style>
