---
type Props = {
  imagePath: string;
  alt: string;
};

const { imagePath, alt } = Astro.props;
---

<div>
  <img src={imagePath} alt={alt} />
</div>

<style>
  div {
    grid-row: 2;
    padding: 1rem;
    border-radius: 1rem;
    width: 100%;
    height: 100%;
  }

  div img {
    max-width: 100%;
    max-height: 100%;
    object-fit: cover;
    box-shadow: 0rem 0.3rem 0.4rem #444;
  }
</style>
